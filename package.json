{
  "name": "proze",
  "displayName": "proze",
  "description": "A tool for writing literature like you would write code.",
  "version": "0.0.1",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/RobotNerd/proze-vscode.git"
  },
  "keywords": [
    "writing",
    "literature"
  ],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:proze.compile",
    "onLanguage:proze"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "proze.compile",
        "title": "Proze: Compile"
      }
    ],
    "configurationDefaults": {
      "[proze]": {
        "editor.quickSuggestions": {
          "other": "off",
          "comments": "off",
          "strings": "off"
        },
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80
      }
    },
    "languages": [
      {
        "id": "proze",
        "extensions": [
          "proze"
        ],
        "aliases": [
          "Proze",
          "proze"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "proze",
        "scopeName": "source.proze",
        "path": "./syntaxes/proze.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "yaml": "^2.1.3"
  }
}
