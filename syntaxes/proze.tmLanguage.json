{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "proze",
	"patterns": [
		{
			"include": "#metadata"
		},
		{
			"include": "#strings"
		},
        {
            "include": "#brackets"
        },
        {
            "include": "#block_comment"
        },
        {
            "include": "#line_comment"
        },
        {
            "include": "#bold"
        },
        {
            "include": "#italic"
        }
	],
	"repository": {
		"metadata": {
			"patterns": [
                {
                    "name": "keyword.control.proze",
                    "match": "^(Title|Author|Chapter|Section):\\s"
                },
                {
                    "name": "keyword.control.proze",
                    "match": "^---\\s?$"
                }
            ]
		},
		"strings": {
			"name": "string.quoted.double.proze",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.proze",
					"match": "\\\\."
				}
			]
		},
        "brackets": {
            "name": "meta.preprocessor.string",
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {
					"name": "constant.character.escape.proze",
					"match": "\\\\."
				},
                {
                    "include": "#comment_token"
                }
            ]
        },
        "block_comment": {
            "name": "comment.block",
            "begin": "###",
            "end": "###",
            "patterns": [
                {
					"name": "constant.character.escape.proze",
					"match": "\\\\."
				},
                {
                    "include": "#comment_token"
                }
            ]
        },
        "line_comment": {
            "name": "comment.line",
            "begin": "##",
            "end": "\n",
            "patterns": [
                {
                    "include": "#comment_token"
                }
            ]
        },
        "bold": {
            "name": "markup.bold",
			"begin": "__",
			"end": "__",
			"patterns": [
				{
					"name": "constant.character.escape.proze",
					"match": "\\\\."
				}
			]
        },
        "italic": {
            "name": "markup.italic",
			"begin": "\\*",
			"end": "\\*",
			"patterns": [
				{
					"name": "constant.character.escape.proze",
					"match": "\\\\."
				}
			]
        },
        "comment_token": {
            "patterns": [
                {
                    "name": "keyword",
                    "match": "\\b(FIXME|IMPORTANT|NOTE|TODO)\\b"
                }
            ]
        }
	},
	"scopeName": "source.proze"
}
